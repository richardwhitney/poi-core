<nav class="ui inverted menu">
  <header class="header item"><a id="sidemenu">Menu</a></header>
  <div class="right menu">
    <a id="home" class="item" href="/home">IoI</a>
    <a id="settings" class="item" href="/settings">Settings</a>
    <a id="logout" class="item" href="/logout">Logout</a>
  </div>
</nav>

<nav class="ui left vertical inverted menu sidebar">
  <header class="header item">Categories</header>
  <a id="openmodal" class="item">
    Add Category
    <i class="plus icon"></i>
  </a>
  {{#each categories}}
    <a class="item">
      {{name}}
      <i class="chevron right icon"></i>
    </a>
  {{/each}}
</nav>

{{> addcategory}}

<script>
  $("#{{_id}}").addClass("active item");
  $('#sidemenu').click(function() {
    $('.ui.sidebar').sidebar('toggle');
  });
  $("#openmodal").click(function () {
    $('.ui.modal').modal('show');
  });
</script>